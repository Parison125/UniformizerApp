    </formats>

    <fileSets>

        <fileSet>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>etc</directory>
            <outputDirectory>etc</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>target/lib</directory>
